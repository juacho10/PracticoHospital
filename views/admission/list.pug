extends ../layout

block content
  .card.shadow
    .card-header.bg-primary.text-white
      h3.mb-0
        i.fas.fa-procedures.me-2
        | ðŸ¥ Pacientes Admitidos
    
    .card-body
      if admissions && admissions.length > 0
        .table-responsive
          table.table.table-striped.table-hover
            thead
              tr
                th DNI
                th Paciente
                th Fecha AdmisiÃ³n
                th Tipo
