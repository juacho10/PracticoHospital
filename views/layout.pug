doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title} | HIS Hospital
        link(rel="stylesheet", href="/css/style.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
    body
        header
            .container
                h1.text-center 🏥 Sistema de Admisión Hospitalaria
                nav
                    if user
                        span Bienvenido, #{user.full_name} (#{user.role})
                        a(href="/") 🏠 Inicio
                        a(href="/admission/list") 🧑‍⚕️ Pacientes Admitidos
                        a(href="/patient/list") 👥 Todos los Pacientes
                        a(href="/auth/logout") 🔒 Cerrar Sesión
        main.container
            if error
                .alert.alert-danger ⚠️ #{error}
            if success
                .alert.alert-success ✅ #{success}
            block content
        footer
            .container
                p.text-center © 2023 Hospital Information System

